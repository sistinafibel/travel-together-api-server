{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "overrides": [
        {
            "files": ["./dist/**/*"],
            "rules": {
                "strict": "off"
            }
        }
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error", { "singleQuote": true }]
    }
}